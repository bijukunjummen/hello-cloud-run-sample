<configuration>
    <include resource="org/springframework/boot/logging/logback/default.xml"/>
    <appender name="GCP" class="com.google.cloud.logging.logback.LoggingAppender">
        <redirectToStdout>true</redirectToStdout>
    </appender>
    <root level="INFO">
        <appender-ref ref="GCP"/>
    </root>
</configuration>